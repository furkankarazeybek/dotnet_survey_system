@model Survey_System.Models.Question
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="card-title">Kişi Düzenleme Sayfası</div>
        <hr>
        <form action="/Question/Edit" method="post">
            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="form-group">
                <label for="input-1">Soru</label>
                <input type="text" class="form-control" name="QuestionAsked" id="input-1" maxlength="50" value="@Model.QuestionAsked" placeholder="Soru" required>
            </div>
           
            <div class="form-group">
                <button type="submit" class="btn btn-round btn-success shadow-success px-5"><i class="icon-lock"></i> Kaydet</button>
            </div>
        </form>
    </div>
</div>
